    <![endif]-->
  </head>
  <body>
    <container>

    	<div class='col-xs-5 large-box'>
    		Overall Platform
    		<div class='col-xs-10 col-xs-offset-1 data-fields'>
    			<table class="data-table">

    				<tr>
    					<th>Item</th>
    					<th>Data</th>
    				</tr>
    				<tr>
    					<td>New Users</td>
    					<td><%= @total_users.count %></td>
    				</tr>
    				<tr>
    					<td>Orders</td>
    					<td><%= @total_orders.count %></td>
    				</tr>
    				<tr>
    					<td>New Products</td>
    					<td><%= @total_products.count %></td>
    				</tr>
    				<tr>
    					<td>Revenue</td>
    					<td>$2500000</td>
    				</tr>
    			</table>

    		</div>
    	</div>
    	<div class='col-xs-5 col-xs-offset-2 large-box'>
    		User Demo
    		<div class='col-xs-10 col-xs-offset-1 data-fields'>
    			Hey!
    		</div>
    	</div>



    	<div class='col-xs-5 large-box'>
    		Order Stats
    		<div class='col-xs-10 col-xs-offset-1 data-fields'>
    			Hey!
    		</div>
    	</div>
    	<div class='col-xs-5 col-xs-offset-2 large-box'>
    		Time Series Data
    		<div class='col-xs-10 col-xs-offset-1 data-fields'>
    			Hey!
    		</div>
    	</div>


    </container>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
  </body>
</html>