<%= render :partial => "/layouts/adminheader" %>

<div class="container">

      <div class="row">
        <%= render :partial => "/layouts/links_index" %>


        <div class="col-xs-7 col-xs-offset-1 admin-view">

<%= render partial: 'notice' %>
	<h2>Products</h2>
	<div>
		<%= link_to "New Product", new_product_path, :class => "btn btn-primary" %><br /><br />
	</div>
	<div class="table-responsive">
		<table class="table">
		<thead>
				<tr>
					<th class="col-xs-2">Product</th>
					<th class="col-xs-4">Category</th>
					<th class="col-xs-4">Action</th>
				</tr>
			</thead>
			<tbody>
				<% @products.each do | p | %>

					<tr>
						<td class="col-xs-2"><%= p.name %></td>

						<td class="col-xs-2">

							<%  @categories.each do |c| %>
								<% if c.id == p.category_id %>
								<%= link_to c.name, category_path( c ) %>
								<% end %>
							<% end %>


						<td class="col-xs-4">
							<%= link_to "Show", product_path( p ) %>
							<%= link_to "Edit", edit_product_path( p ) %>
							<%= link_to "Delete", product_path( p ), method: :delete, data: {confirm: "Really delete the category?"} %>
						</td>

					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

        </div>

      </div>
