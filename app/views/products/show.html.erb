<div class="container">


	<div class="row center">



		<h1><%= @product.name %></h1>

	</div>

	<table class="table">

		<thead>
			<th class="center"  colspan = "2">Product Information</th>
		</thead>
		<tr>
			<td class = "col-xs-4"> Product ID</td>
			<td class = "col-xs-4"><%= @product.id %></td>
		</tr>

		<tr>
			<td class = "col-xs-4">Name</td>
			<td class = "col-xs-4"><%= @product.name %></td>
		</tr>

		<tr>
			<td class = "col-xs-4">Price</td>
			<td class = "col-xs-4"><%= @product.price %></td>
		</tr>

		<tr>
			<td class = "col-xs-4"> Product ID</td>
			<td class = "col-xs-4"><%= @product.category.name %></td>
		</tr>


		<thead>
			<th class="center"  colspan = "2">Product Statistics</th>
		</thead>
		<tr>
			<td class = "col-xs-4">Times Ordered</td>
			<td class = "col-xs-4"><%= %></td>
		</tr>

		<tr>
			<td class = "col-xs-4">Carts In</td>
			<td class = "col-xs-4"><%=  %></td>
		</tr>



	<tr>

		<td colspan="2" ><%= link_to :Edit, edit_product_path %></td>
	</tr>
	<tr>
		<td colspan="2" ><%= link_to :Delete, product_path, :method => 'delete' %></td>
	</tr>


	</table>

</div>