<%= form_for @product do |f| %>

	<%= f.label :id %>
	<%= @product.id.nil? ? "N/A" : @product.id %><br />


	<%= f.label :name %>

	<% if !@product.errors[:name].empty? %>
    <%= @product.errors[:name].join %>
  <% end %>
	<%= f.text_field :name, placeholder: 'Product Name', required: true %> <br />

	<%= f.label :price %>
	<% if !@product.errors[:price].empty? %>
    <%= @product.errors[:price].join %>
  <% end %>
	<%= f.text_field :price, placeholder: '$0.00' %> <br />

	<%= f.label :category %>
	<% if !@product.errors[:category].empty? %>
    <%= @product.errors[:category].join %>
  <% end %>
	<%= f.collection_select :category_id, Category.all, :id, :name %>

	<%= f.submit :Add, class: "btn btn-primary" %>

<% end %>