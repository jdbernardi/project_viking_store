<%= render :partial => "/layouts/adminheader" %>

<div class="container">

      <div class="row">
        <%= render :partial => "/layouts/links_index" %>


        <div class="col-xs-7 col-xs-offset-1 admin-view">

<%= render partial: 'notice' %>
	<h2>Categories</h2>
	<div>
		<%= link_to "New Category", new_category_path, :class => "btn btn-primary" %><br /><br />
	</div>
	<div class="table-responsive">
		<table class="table">
		<thead>
				<tr>
					<th class="col-xs-2">Category</th>
					<th class="col-xs-6">Description</th>
					<th class="col-xs-4">Action</th>
				</tr>
			</thead>
			<tbody>
				<% @categories.each do |c| %>
					<tr>
						<td class="col-xs-2"><%= c.name %></td>
						<td class="col-xs-6"><%= c.description %></td>

						<td class="col-xs-4">
							<%= link_to "Show", category_path( c ) %>
							<%= link_to "Edit", edit_category_path( c ) %>
							<%= link_to "Delete", category_path( c ), method: :delete, data: {confirm: "Really delete the category?"} %>
						</td>

					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

        </div>

      </div>
