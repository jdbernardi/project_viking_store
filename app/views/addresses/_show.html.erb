  <%= form_tag(@url) do %>
    <tr class="form-group">
      <td><%= label_tag 'Street:' %></td>
      <td><%= label_tag 'street_address', @address.street_address %></td>
    </tr>
		<tr class="form-group">
			<td><%= label_tag 'City: ' %></td>
			<td><%= label_tag 'city', @address.city.name %></td>
          </tr>
          <tr>
            <td><%= label_tag 'State: ' %></td>
            <td><%= label_tag 'state', to_state_abbrev(@address.state.name) %></td>
          </tr>
          <tr>
          <td><%= label_tag 'Zip: ' %></td>
          <td><%= label_tag 'zip', @address.zip_code %></td>
          </tr>

          <tr>
          <div class="form-group">
            <%=  hidden_field_tag 'id', @address.id %>
          </div>
          <td><%= submit_tag 'update', class: "btn btn-primary", data: { confirm: "Are you sure you want to invite this person with this Role?" } %></td>
        </tr>
<% end %>